rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- USER PROFILE & BIKE FILES ---
    // Users can only write to their own directory.
    // The path contains the userId, which we match against their auth uid.
    match /bike_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /bike_documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /transfer_documents/{bikeId}/{allPaths=**} {
        allow read, write: if request.auth != null;
    }

    // --- ADMIN & PUBLIC CONTENT ---
    // Anyone can read public images (community photo, sponsor logos).
    match /homepage_assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /sponsors/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
