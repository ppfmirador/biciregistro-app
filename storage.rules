rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default deny all access to prevent unauthorized access to any path.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // --- Publicly Readable Assets ---
    
    // Anyone can read bike images and homepage assets.
    match /bike_images/{allPaths=**} {
      allow read: if true;
    }
    
    match /homepage_assets/{allPaths=**} {
        allow read: if true;
    }
    
    match /sponsors/{allPaths=**} {
        allow read: if true;
    }

    // --- User-Restricted Writable Paths ---
    // A user can only write to their own designated folder.
    
    // Bike Images: Only the owner (authenticated user) can upload to their own folder.
    match /bike_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Bike Documents: Only the owner can upload.
    match /bike_documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Transfer Documents: Only authenticated users can upload to a path matching the bikeId.
    // The bikeId is not user-specific, but access is controlled by the upload logic.
    match /transfer_documents/{bikeId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // --- Public Access for Documents (via URL) ---
    // While writing is restricted, reading is allowed if you have the URL.
    // This is secure because URLs are unguessable and only shared with intended recipients.
    match /bike_documents/{userId}/{bikeId}/{fileName} {
      allow read: if true;
    }
    
    match /transfer_documents/{bikeId}/{fileName} {
      allow read: if true;
    }
  }
}
