rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow authenticated users to write files.
      // This is a simplified rule for debugging and ensuring the core auth works.
      allow write: if request.auth != null;

      // Allow anyone to read files for public display.
      allow read: if true;
    }
  }
}
