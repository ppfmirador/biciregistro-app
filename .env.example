# Firebase Project Configuration
# IMPORTANT: Do not commit your actual keys to version control.
# This file is an example. Create a .env.local file and copy these variables into it.

# Find this in your Firebase project settings -> General -> Your apps -> Firebase SDK snippet -> Config
NEXT_PUBLIC_FIREBASE_API_KEY="AIza..."
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="1234567890"
NEXT_PUBLIC_FIREBASE_APP_ID="1:1234567890:web:..."

# Required for auth redirects to work correctly on a custom domain or specific hosting URL.
# Should be the full URL of your production environment.
FIREBASE_AUTH_HOSTING_URL="https://your-project-id.web.app"

# Optional. The service account key JSON for server-side admin operations.
# Copy the entire JSON object here as a single line string.
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account",...}'

# Optional. For local development with App Check. Generate this from your browser's console logs.
NEXT_PUBLIC_FIREBASE_APPCHECK_DEBUG_TOKEN="a-long-uuid-string..."

# Required for Firebase App Check with reCAPTCHA v3.
# Go to Google Cloud Console -> Security -> reCAPTCHA Enterprise -> Find your key -> Copy "Clave del sitio".
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key-here"
